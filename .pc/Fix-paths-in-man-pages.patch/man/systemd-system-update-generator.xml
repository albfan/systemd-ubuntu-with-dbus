<refentry id="systemd-system-update-generator">

  <refentryinfo>
    <title>systemd-system-update-generator</title>
    <productname>systemd</productname>

    <authorgroup>
      <author>
        <contrib>Developer</contrib>
        <firstname>Lennart</firstname>
